{
  "manifest_version": 3,
  "name": "Cookie Clicker Bot",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://orteil.dashnet.org/cookieclicker/*"],
      "js": ["injector.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.js"],
      "matches": ["*://orteil.dashnet.org/*"]
    }
  ],
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
   "16": "assets/icons/extension_icon16.png",
   "32": "assets/icons/extension_icon32.png",
   "48": "assets/icons/extension_icon48.png",
   "128": "assets/icons/extension_icon128.png"
 }
}